<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.DemoActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/actions"
        android:src="@drawable/ic_adjust"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_display_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/display_all"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_display_all"
        app:layout_constraintEnd_toStartOf="@+id/button_display_all"
        app:layout_constraintTop_toTopOf="@+id/button_display_all" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_display_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/display_all"
        android:src="@drawable/ic_all"
        app:layout_constraintBottom_toTopOf="@+id/button_settings"
        app:layout_constraintEnd_toEndOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="@+id/button_settings"
        />

    <TextView
        android:id="@+id/text_display_list_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/display_list_b"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_display_list_b"
        app:layout_constraintEnd_toStartOf="@+id/button_display_list_b"
        app:layout_constraintTop_toTopOf="@+id/button_display_list_b" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_display_list_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/display_list_b"
        android:src="@drawable/ic_list_b"
        app:layout_constraintBottom_toTopOf="@+id/button_display_all"
        app:layout_constraintEnd_toEndOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="@+id/button_settings"
        />

    <TextView
        android:id="@+id/text_display_list_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/display_list_a"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_display_list_a"
        app:layout_constraintEnd_toStartOf="@+id/button_display_list_a"
        app:layout_constraintTop_toTopOf="@+id/button_display_list_a" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_display_list_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/display_list_a"
        android:src="@drawable/ic_list_a"
        app:layout_constraintBottom_toTopOf="@+id/button_display_list_b"
        app:layout_constraintEnd_toEndOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="@+id/button_settings"
        />

    <TextView
        android:id="@+id/text_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/insert_data"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_add"
        app:layout_constraintEnd_toStartOf="@+id/button_add"
        app:layout_constraintTop_toTopOf="@+id/button_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/insert_data"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toTopOf="@+id/button_display_list_a"
        app:layout_constraintEnd_toEndOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="@+id/button_settings"
        />

    <TextView
        android:id="@+id/text_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/clear"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_clear"
        app:layout_constraintEnd_toStartOf="@+id/button_clear"
        app:layout_constraintTop_toTopOf="@+id/button_clear" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/clear"
        android:src="@drawable/ic_clear"
        app:layout_constraintBottom_toTopOf="@+id/button_add"
        app:layout_constraintEnd_toEndOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="@+id/button_settings"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
